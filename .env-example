# GraceHub Platform Environment Variables
# Copy this file to .env and customize

# Master Bot Configuration
export MASTER_BOT_TOKEN=YOU_TOKEN
export WEBHOOK_DOMAIN=example.ru
export WEBHOOK_PORT=9443

# Security
export ENCRYPTION_KEY_FILE=data/master_key.key

# Rate Limiting
export GLOBAL_RATE_LIMIT=30
export CHAT_RATE_LIMIT=20

# Instance limits
export MAX_INSTANCES_PER_USER=5

# Auto-close tickets (hours)
export AUTO_CLOSE_HOURS=12

# Logging
export LOG_LEVEL=INFO

# Optional: Metrics
export ENABLE_METRICS=false
export METRICS_PORT=9090

# for debug Optional
export WORKER_INSTANCE_ID=
export WORKER_TOKEN=

export DATABASE_URL=postgresql://gh_user:gh_password_change_me@localhost:5432/gracehub

# Single Tenant Mode. 0 - Off, 1 - On
export GRACEHUB_SINGLE_TENANT_OWNER_ONLY=0
export GRACEHUB_OWNER_TELEGRAM_ID=

# Monitor 10 mins
export WORKER_MONITOR_INTERVAL=600

# Cron job
export BILLING_CRON_INTERVAL=3600

# Size files
export WORKER_MAX_FILE_MB=50
