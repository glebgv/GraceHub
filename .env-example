# GraceHub Platform Environment Variables
# Copy this file to .env and customize

# Master Bot Configuration
MASTER_BOT_TOKEN=YOU_TOKEN
WEBHOOK_DOMAIN=example.ru
WEBHOOK_PORT=9443
MINIAPP_BASE_URL=https://site.ru

# Rate Limiting
GLOBAL_RATE_LIMIT=30
CHAT_RATE_LIMIT=20

# Instance limits
MAX_INSTANCES_PER_USER=5

# Auto-close tickets (hours)
AUTO_CLOSE_HOURS=12

# Logging
LOG_LEVEL=INFO

# Optional: Metrics
ENABLE_METRICS=false
METRICS_PORT=9090

# for debug Optional
WORKER_INSTANCE_ID=
WORKER_TOKEN=

# DB connectors
DB_USER=gh_user
DB_PASSWORD=YOU_PASS
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gracehub

# Monitor interval (seconds)
WORKER_MONITOR_INTERVAL=60
# Cron job interval (seconds)
BILLING_CRON_INTERVAL=3600

# SuperAdmin first set
GRACEHUB_SUPERADMIN_TELEGRAM_ID=YOU_ID_TG
