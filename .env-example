# GraceHub Platform Environment Variables
# Copy this file to .env and customize

# Master Bot Configuration
MASTER_BOT_TOKEN=YOU_TOKEN
WEBHOOK_DOMAIN=example.ru
WEBHOOK_PORT=9443
MINIAPP_BASE_URL=https://site.ru

# Security
ENCRYPTION_KEY_FILE=data/master_key.key

# Rate Limiting
GLOBAL_RATE_LIMIT=30
CHAT_RATE_LIMIT=20

# Instance limits
MAX_INSTANCES_PER_USER=5

# Auto-close tickets (hours)
AUTO_CLOSE_HOURS=12

# Logging
LOG_LEVEL=INFO

# Optional: Metrics
ENABLE_METRICS=false
METRICS_PORT=9090

# for debug Optional
WORKER_INSTANCE_ID=
WORKER_TOKEN=

# DB connectors
DB_USER=gh_user
DB_PASSWORD=YOU_PASS
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gracehub

# Single Tenant Mode. 0 - Off, 1 - On
GRACEHUB_SINGLE_TENANT_OWNER_ONLY=0
GRACEHUB_OWNER_TELEGRAM_ID=

# Monitor interval (seconds)
WORKER_MONITOR_INTERVAL=60

# Cron job interval (seconds)
BILLING_CRON_INTERVAL=3600

# Size files (MB)
WORKER_MAX_FILE_MB=50

# Antiflood
ANTIFLOOD_MAX_USER_MESSAGES_PER_MINUTE=30


## TON INTEGRATION##
# For TESTNET (development and testing)
TON_NETWORK=testnet
TON_WALLET_ADDRESS=0QAbc123...
TON_API_BASE_URL=https://testnet.toncenter.com/api/v2
TON_API_KEY=

# For MAINNET (production network) - uncomment when ready for production
# TON_NETWORK=mainnet
# TON_WALLET_ADDRESS=UQAbc123...
# TON_API_BASE_URL=https://toncenter.com/api/v2/jsonRPC
# TON_API_KEY=

# Transaction verification settings
TON_CHECK_DELAY_SECONDS=5
TON_CONFIRMATIONS_REQUIRED=1

# Pricing for plan conversion (optional, if not stored in DB)
TON_PRICE_PER_PERIOD_LITE=0.5
TON_PRICE_PER_PERIOD_PRO=2.0
TON_PRICE_PER_PERIOD_ENTERPRISE=5.0
